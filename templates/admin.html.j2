<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Shots Poker - Admin</title>
    <link rel="icon" type="image/svg+xml" href="{{ url_for('static', filename='img/favicon.svg') }}"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.5.1/dist/chart.umd.min.js"></script>
    <script src="{{ url_for('static', filename='js/theme.js', v=timestamp) }}"></script>
</head>
<body class="bg-body-tertiary">
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>üîß Admin Panel</h1>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary" onclick="toggleTheme()" title="Toggle Dark Mode">
                    üí°
                </button>
                <a href="/" class="btn btn-outline-primary">Back to Home</a>
            </div>
        </div>

        <div class="alert alert-info">
            Storage Mode: <strong>{{ storage_mode }}</strong>
            {% if storage_mode == 'In-Memory' %}
            (Single instance - data will be lost on restart)
            {% endif %}
        </div>

        <div class="row mb-4 g-3">
            <div class="col-md-4">
                <div class="card shadow-sm h-100 bg-primary text-white">
                    <div class="card-body">
                        <h6 class="text-uppercase fw-bold opacity-75">Total Sessions</h6>
                        <h2 class="mb-0">{{ total_sessions }}</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100 bg-success text-white">
                    <div class="card-body">
                        <h6 class="text-uppercase fw-bold opacity-75">Total Votes Cast</h6>
                        <h2 class="mb-0">{{ total_votes }}</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100 bg-info text-white">
                    <div class="card-body">
                        <h6 class="text-uppercase fw-bold opacity-75">Active Rooms Now</h6>
                        <h2 class="mb-0">{{ rooms|length }}</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-body-tertiary fw-bold">
                üìà Activity (Last 7 Days)
            </div>
            <div class="card-body">
                <canvas id="usageChart" style="max-height: 250px;"></canvas>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Room ID</th>
                            <th>Ticket</th>
                            <th>Users</th>
                            <th>Created</th>
                            <th>Last Active</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for room in rooms %}
                        <tr>
                            <td class="fw-bold font-monospace">{{ room.id }}</td>
                            <td><span class="badge bg-secondary">{{ room.ticket }}</span></td>
                            <td>{{ room.participants }} üë§</td>
                            <td class="small text-muted">{{ room.created_at }}</td>
                            <td class="small text-muted">{{ room.last_updated }}</td>
                            <td>
                                <form action="{{ url_for('delete_room', room_id=room.id) }}" method="POST" onsubmit="return confirm('Are you sure? This will kick everyone out.');">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete üóëÔ∏è</button>
                                </form>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-4">No active rooms found.</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.5.1/dist/chart.umd.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const ctx = document.getElementById('usageChart');
            if (ctx) {
                // Ensure Flask handles these variables gracefully if empty
                const labels = {{ chart_labels | default('[]') | safe }};
                const data = {{ chart_data | default('[]') | safe }};

                new Chart(ctx.getContext('2d'), {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Voting Sessions',
                            data: data,
                            borderColor: '#0d6efd',
                            backgroundColor: 'rgba(13, 110, 253, 0.2)',
                            borderWidth: 2,
                            fill: true,
                            tension: 0.3
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false }
                        },
                        scales: {
                            y: { beginAtZero: true, ticks: { stepSize: 1 } }
                        }
                    }
                });
            }
        });
    </script>
</body>
</html>