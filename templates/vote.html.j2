<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>[Room {{ room_id }}] Shots Poker</title>
    <link rel="icon" type="image/svg+xml" href="{{ url_for('static', filename='img/favicon.svg') }}"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{ url_for('static', filename='css/style.css') }}" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.5.1/dist/chart.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/socket.io@4.8.3/client-dist/socket.io.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.9.4/dist/confetti.browser.min.js"></script>
    <script>
        const currentRoomId = "{{ room_id }}";
        let myRole = "{{ user_role }}";
        const myName = "{{ user_name }}";
    </script>
</head>
<body>

    <div class="container py-5" id="mainApp">
        
        <div class="position-absolute top-0 end-0 p-3">
            <div class="d-flex align-items-center gap-2">
                <div id="roomInfoDisplay" class="badge bg-light text-dark border room-badge p-2 shadow-sm" style="font-size: 0.9rem;" onclick="copyRoomId()" title="Click to Copy ID">
                    Room ID: <span id="currentRoomDisplay" class="fw-bold font-monospace">{{ room_id }}</span> üìã
                </div>
                <div class="form-check form-switch d-inline-block me-2 align-middle">
                    <input class="form-check-input" type="checkbox" id="roleSwitch" 
                        onchange="toggleRole()" 
                        {% if user_role == 'observer' %}checked{% endif %}>
                    <label class="form-check-label fw-bold" for="roleSwitch" style="font-size: 0.9rem;">
                        üëÄ Observer
                    </label>
                </div>

                <button id="logoutBtn" class="btn btn-danger btn-sm shadow-sm" onclick="logout()">
                    Exit üö™
                </button>
            </div>
        </div>

        <h1 class="text-center mb-4">Shots Poker</h1>

        <div class="card mb-4">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <span>Controls (Anyone can act as Admin)</span>
                
                <div class="bg-light rounded-pill px-3 py-1 d-flex align-items-center gap-2 shadow-sm border border-secondary">
                    <span style="font-size: 1.2rem;">{{ user_avatar }}</span> 
                    <span class="fw-bold text-dark" style="font-size: 0.9rem;">{{ user_name }}</span>
                </div>
            </div>
            <div class="card-body">
                <div class="row g-2 align-items-center">
                    <div class="col-auto">
                        <input type="text" id="jiraTicket" class="form-control" placeholder="JIRA Ticket (e.g. PROJ-123)">
                    </div>
                    <div class="col-auto">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="publicVote" checked>
                            <label class="form-check-label" for="publicVote">Public Votes</label>
                        </div>
                    </div>
                    <div class="col-auto">
                        <button id="startVoteBtn" class="btn btn-primary" onclick="startVote()">Start New Vote</button>
                        <button class="btn btn-warning" onclick="revealVote()">Reveal Results</button>
                        <button class="btn btn-secondary" onclick="resetVote()">Reset</button>
                        <div class="btn-group ms-2">
                            <button type="button" class="btn btn-outline-dark dropdown-toggle" data-bs-toggle="dropdown">
                                ‚è±Ô∏è Timer
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#" onclick="startTimer(30)">30 Seconds</a></li>
                                <li><a class="dropdown-item" href="#" onclick="startTimer(60)">1 Minute</a></li>
                                <li><a class="dropdown-item" href="#" onclick="startTimer(120)">2 Minutes</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="#" onclick="stopTimer()">Stop Timer</a></li>
                            </ul>
                        </div>
                        <button class="btn btn-outline-primary ms-2" onclick="openQueueModal()">Manage Queue</button>
                        <button class="btn btn-outline-primary ms-2" onclick="openHistoryModal()">
                            üìú History
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div id="queueSection" class="mb-4" style="display:none;">
            <div class="card bg-light border-0">
                <div class="card-body py-2 d-flex align-items-center gap-2 overflow-auto">
                    <strong class="text-nowrap">Up Next:</strong>
                    <div id="queueList" class="d-flex gap-2">
                        </div>
                </div>
            </div>
        </div>

        {% include 'partials/queue.html.j2' %}
        <div class="text-center mb-5">
            <h2 id="currentTicketDisplay">Waiting for session...</h2>
            <div id="timerDisplay" class="badge bg-danger fs-4 mb-2 shadow-sm" style="display:none;">
               0:00
            </div>
            <div id="statusMessage" class="text-muted"></div>
        </div>

        <div id="votingInterface" class="row justify-content-center mb-5" style="display:none;">
            <div class="col-md-10 text-center"> <h5>Cast your vote:</h5>
                <div id="cardsContainer" class="d-flex justify-content-center gap-2 flex-wrap">
                </div>
            </div>
        </div>
        <div id="observerMessage" class="text-center mb-5 alert alert-info" style="display:none;">
            <h4>üëÄ You are observing this session.</h4>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Participants</div>
                    <ul class="list-group list-group-flush" id="votersList">
                        </ul>
                </div>
            </div>

            <div class="col-md-6 text-center">
                <div class="card">
                    <div class="card-header">Results Distribution</div>
                    <div class="card-body">
                        <div id="statsRow" class="row text-center mb-3" style="display:none;">
                            <div class="col-6">
                                <div class="border rounded p-2 bg-light">
                                    <small class="text-muted d-block text-uppercase fw-bold" style="font-size:0.7rem;">Average</small>
                                    <span id="statAverage" class="fs-4 fw-bold text-primary">--</span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="border rounded p-2 bg-light">
                                    <small class="text-muted d-block text-uppercase fw-bold" style="font-size:0.7rem;">Agreement</small>
                                    <span id="statAgreement" class="fs-4 fw-bold text-success">--</span>
                                </div>
                            </div>
                        </div>

                        <div id="chartContainer">
                            <canvas id="resultsChart"></canvas>
                        </div>
                        <p id="chartPlaceholder" class="text-muted mt-5">Waiting for reveal...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include 'partials/toast.html.j2' %}
    {% include 'partials/history.html.j2' %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ url_for('static', filename='js/vote-queue.js', v=timestamp) }}"></script>
    <script src="{{ url_for('static', filename='js/vote-ui.js', v=timestamp) }}"></script>
    <script src="{{ url_for('static', filename='js/vote.js', v=timestamp) }}"></script>
    <script src="{{ url_for('static', filename='js/main.js', v=timestamp) }}"></script>

</body>
</html>